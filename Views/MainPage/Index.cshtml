@model WebMedicalNew.MainPage
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Main Page</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    if (Login.usertype == 1)
    {
    <h4>Insert new Announcement</h4>
    @Html.Label("Announcement Title")
    <br />
    @Html.TextBoxFor(m => m.announcement_title, new { style = "width:25%" })
    <br />
    @Html.Label("Announcement")
    <br />
    @Html.TextAreaFor(m => m.announcement, new { rows = "5", cols = "100" })
    <button class="btn btn-link"><span class="glyphicon glyphicon-ok-circle"></span>&nbsp;&nbsp; Insert New Announcement</button>
    }
    <h4>Daily Announcements</h4>
    <table align="left" class="table table-bordered" style="width:100%">
        <thead>
            <tr>
                <th style="width:20%" scope="col">Full Name</th>
                <th style="width:20%" scope="col">Doctor Category</th>
                <th style="width:20%" scope="col">Title</th>
                <th style="width:40%" scope="col">Announcement</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model.announcements)
            {
                <tr>
                    <td>@c.doc_fullname</td>
                    <td>@c.doc_category</td>
                    <td>@c.announcement_title</td>
                    <td>@c.announcement</td>
                </tr>
            }
        </tbody>
    </table>
